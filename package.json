{
    "name": "@nlib/eslint-config",
    "publishConfig": {
        "access": "public"
    },
    "version": "3.19.9",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/gjbkz"
    },
    "homepage": "https://github.com/nlibjs/eslint-config",
    "repository": "https://github.com/nlibjs/eslint-config",
    "engines": {
        "node": ">=12"
    },
    "type": "module",
    "main": ".eslintrc.json",
    "files": [
        ".eslintrc.json"
    ],
    "scripts": {
        "build": "node build.mjs",
        "test": "run-s build test:*",
        "test:rules": "node test/rules.test.mjs",
        "test:generator": "node test/generator.test.mjs",
        "lint": "eslint --ext .ts --ext .mjs build.mjs test",
        "version": "run-s version:*",
        "version:changelog": "nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "peerDependencies": {
        "eslint": ">= 8"
    },
    "dependencies": {
        "@nlib/eslint-plugin": "1.1.1",
        "@typescript-eslint/eslint-plugin": "6.4.0",
        "@typescript-eslint/parser": "6.4.0",
        "eslint-import-resolver-typescript": "3.6.0",
        "eslint-plugin-import": "2.28.0"
    },
    "devDependencies": {
        "@nlib/changelog": "0.2.4",
        "@nlib/githooks": "0.1.0",
        "@nlib/lint-commit": "0.2.0",
        "@types/eslint": "8.44.2",
        "@types/node": "20.5.0",
        "eslint": "8.47.0",
        "lint-staged": "14.0.0",
        "npm-run-all": "4.1.5",
        "typescript": "5.1.6"
    },
    "ava": {
        "files": [
            "test/*.test.mjs"
        ]
    },
    "lint-staged": {
        "*.{ts,tsx,js,mjs,cjs,jsx}": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
