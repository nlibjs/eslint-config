{
    "name": "@nlib/eslint-config",
    "publishConfig": {
        "access": "public"
    },
    "version": "3.17.30",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/gjbkz"
    },
    "homepage": "https://github.com/nlibjs/eslint-config",
    "repository": "https://github.com/nlibjs/eslint-config",
    "engines": {
        "node": ">=12"
    },
    "main": "index.js",
    "files": [
        "index.*"
    ],
    "scripts": {
        "test": "ava",
        "lint": "eslint --ext .ts --ext .js index.js index.d.ts test",
        "version": "run-s version:changelog version:add",
        "version:changelog": "npx @nlib/changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "peerDependencies": {
        "eslint": ">= 8"
    },
    "dependencies": {
        "@nlib/eslint-plugin": "1.0.18"
    },
    "devDependencies": {
        "@nlib/githooks": "0.1.0",
        "@nlib/lint-commit": "0.1.8",
        "@types/eslint": "8.4.1",
        "@types/node": "17.0.21",
        "@typescript-eslint/eslint-plugin": "5.12.1",
        "@typescript-eslint/parser": "5.16.0",
        "ava": "3.15.0",
        "eslint": "8.11.0",
        "lint-staged": "12.3.7",
        "npm-run-all": "4.1.5",
        "ts-node": "10.7.0",
        "typescript": "4.6.2"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "test/*.test.ts"
        ]
    },
    "eslintConfig": {
        "extends": [
            "./index.js"
        ],
        "env": {
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,mjs,cjs,jsx}": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
