{
    "name": "@nlib/eslint-config",
    "publishConfig": {
        "access": "public"
    },
    "version": "3.18.0",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/gjbkz"
    },
    "homepage": "https://github.com/nlibjs/eslint-config",
    "repository": "https://github.com/nlibjs/eslint-config",
    "engines": {
        "node": ">=12"
    },
    "type": "module",
    "main": ".eslintrc.json",
    "files": [
        ".eslintrc.json"
    ],
    "scripts": {
        "build": "node build.mjs",
        "test": "run-s build test:*",
        "test:ava": "ava",
        "lint": "eslint --ext .ts --ext .mjs build.mjs test",
        "postversion": "run-s postversion:*",
        "postversion:changelog": "nlib-changelog --output CHANGELOG.md",
        "postversion:add": "git add .",
        "postversion:amend": "git commit -m \"$(git log -1 --format=%s)\" --amend"
    },
    "peerDependencies": {
        "eslint": ">= 8"
    },
    "dependencies": {
        "@nlib/eslint-plugin": "1.1.1"
    },
    "devDependencies": {
        "@nlib/githooks": "0.1.0",
        "@nlib/lint-commit": "0.2.0",
        "@types/eslint": "8.4.5",
        "@types/node": "17.0.45",
        "@typescript-eslint/eslint-plugin": "5.23.0",
        "@typescript-eslint/parser": "5.30.7",
        "ava": "4.3.1",
        "eslint": "8.21.0",
        "lint-staged": "12.5.0",
        "npm-run-all": "4.1.5",
        "typescript": "4.7.4"
    },
    "ava": {
        "files": [
            "test/*.test.mjs"
        ]
    },
    "lint-staged": {
        "*.{ts,tsx,js,mjs,cjs,jsx}": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
