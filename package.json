{
    "name": "@nlib/eslint-config",
    "publishConfig": {
        "access": "public"
    },
    "version": "3.17.2",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/eslint-config",
    "repository": "https://github.com/nlibjs/nlibjs",
    "engines": {
        "node": ">=10"
    },
    "main": "index.js",
    "files": [
        ".editorconfig",
        "index.js",
        "index.d.ts"
    ],
    "scripts": {
        "test": "ava",
        "lint": "eslint index.js test",
        "version:changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 0",
        "version:add": "git add .",
        "version": "run-s version:changelog version:add"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@types/eslint": "^7.2.1",
        "@typescript-eslint/eslint-plugin": "^3.9.1",
        "@typescript-eslint/parser": "^3.9.1",
        "ava": "^3.11.1",
        "conventional-changelog-cli": "^2.1.0",
        "eslint": "^7.7.0",
        "husky": "^4.2.5",
        "npm-run-all": "^4.1.5",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    },
    "ava": {
        "extensions": [
            "ts",
            "js"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "test/*.test.ts"
        ]
    },
    "eslintConfig": {
        "extends": ["./index.js"],
        "env": {
            "node": true
        },
        "overrides": [
            {
                "files": ["test/index.test.ts"],
                "rules": {
                    "@typescript-eslint/no-unsafe-assignment": "off"
                }
            }
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "npx run-p test lint"
        }
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}
