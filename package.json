{
    "name": "@nlib/eslint-config",
    "publishConfig": {
        "access": "public"
    },
    "version": "3.17.30",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/gjbkz"
    },
    "homepage": "https://github.com/nlibjs/eslint-config",
    "repository": "https://github.com/nlibjs/eslint-config",
    "engines": {
        "node": ">=12"
    },
    "type": "module",
    "main": ".eslintrc.json",
    "files": [
        ".eslintrc.json"
    ],
    "scripts": {
        "build": "node build.mjs",
        "test": "run-s build test:*",
        "test:ava": "ava",
        "lint": "eslint --ext .ts --ext .mjs build.mjs test",
        "version": "run-s version:changelog version:add",
        "version:changelog": "npx @nlib/changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "peerDependencies": {
        "eslint": ">= 8"
    },
    "dependencies": {
        "@nlib/eslint-plugin": "1.0.18"
    },
    "devDependencies": {
        "@nlib/githooks": "0.1.0",
        "@nlib/lint-commit": "0.1.8",
        "@types/eslint": "8.4.2",
        "@types/node": "17.0.31",
        "@typescript-eslint/eslint-plugin": "5.22.0",
        "@typescript-eslint/parser": "5.22.0",
        "ava": "4.2.0",
        "eslint": "8.14.0",
        "lint-staged": "12.4.1",
        "npm-run-all": "4.1.5",
        "typescript": "4.6.4"
    },
    "ava": {
        "files": [
            "test/*.test.mjs"
        ]
    },
    "lint-staged": {
        "*.{ts,tsx,js,mjs,cjs,jsx}": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
