{
    "name": "@nlib/eslint-config",
    "publishConfig": {
        "access": "public"
    },
    "version": "3.17.21",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/eslint-config",
    "repository": "https://github.com/nlibjs/eslint-config",
    "engines": {
        "node": ">=12"
    },
    "main": "index.js",
    "files": [
        "index.*"
    ],
    "scripts": {
        "test": "ava",
        "lint": "eslint --ext .ts --ext .js index.js test",
        "version": "run-s version:changelog version:add",
        "version:changelog": "nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "peerDependencies": {
        "eslint": ">= 3"
    },
    "dependencies": {
        "@nlib/eslint-plugin": "1.0.12"
    },
    "devDependencies": {
        "@nlib/changelog": "0.1.9",
        "@nlib/githooks": "0.0.5",
        "@nlib/lint-commit": "0.1.4",
        "@types/eslint": "7.2.8",
        "@types/node": "14.14.37",
        "@typescript-eslint/eslint-plugin": "4.20.0",
        "@typescript-eslint/parser": "4.21.0",
        "ava": "3.15.0",
        "eslint": "7.23.0",
        "lint-staged": "10.5.4",
        "npm-run-all": "4.1.5",
        "ts-node": "9.1.1",
        "typescript": "4.2.4"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "test/*.test.ts"
        ]
    },
    "eslintConfig": {
        "extends": [
            "./index.js"
        ],
        "env": {
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off"
        },
        "overrides": [
            {
                "files": [
                    "test/rules.test.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-unsafe-assignment": "off"
                }
            }
        ]
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
