{
    "name": "@nlib/eslint-config",
    "publishConfig": {
        "access": "public"
    },
    "version": "3.17.28",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/eslint-config",
    "repository": "https://github.com/nlibjs/eslint-config",
    "engines": {
        "node": ">=12"
    },
    "main": "index.js",
    "files": [
        "index.*"
    ],
    "scripts": {
        "test": "ava",
        "lint": "eslint --ext .ts --ext .js index.js index.d.ts test",
        "version": "run-s version:changelog version:add",
        "version:changelog": "npx @nlib/changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "peerDependencies": {
        "eslint": ">= 3"
    },
    "dependencies": {
        "@nlib/eslint-plugin": "1.0.16"
    },
    "devDependencies": {
        "@nlib/githooks": "0.1.0",
        "@types/eslint": "7.28.2",
        "@types/node": "16.11.6",
        "@typescript-eslint/eslint-plugin": "5.1.0",
        "@typescript-eslint/parser": "5.2.0",
        "ava": "3.15.0",
        "eslint": "7.32.0",
        "lint-staged": "11.2.6",
        "npm-run-all": "4.1.5",
        "ts-node": "10.4.0",
        "typescript": "4.4.4"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "test/*.test.ts"
        ]
    },
    "eslintConfig": {
        "extends": [
            "./index.js"
        ],
        "env": {
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint"
        ],
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
