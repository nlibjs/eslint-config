{
    "name": "@nlib/eslint-config",
    "publishConfig": {
        "access": "public"
    },
    "version": "3.17.11",
    "license": "Apache-2.0",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "homepage": "https://github.com/nlibjs/eslint-config",
    "repository": "https://github.com/nlibjs/eslint-config",
    "engines": {
        "node": ">=12"
    },
    "main": "index.js",
    "files": [
        "index.*",
        "commitlint.config.*"
    ],
    "scripts": {
        "test": "ava",
        "lint": "eslint --ext .ts --ext .js index.js test",
        "version": "run-s version:changelog version:add",
        "version:changelog": "nlib-changelog --output CHANGELOG.md",
        "version:add": "git add ."
    },
    "peerDependencies": {
        "eslint": ">= 3"
    },
    "dependencies": {
        "@nlib/eslint-plugin": "^1.0.9"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@nlib/changelog": "^0.1.5",
        "@types/eslint": "^7.2.2",
        "@typescript-eslint/eslint-plugin": "^4.1.0",
        "@typescript-eslint/parser": "^4.1.0",
        "ava": "^3.12.1",
        "eslint": "^7.8.1",
        "husky": "^4.3.0",
        "npm-run-all": "^4.1.5",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "test/*.test.ts"
        ]
    },
    "eslintConfig": {
        "extends": [
            "./index.js"
        ],
        "env": {
            "node": true
        },
        "rules": {
            "@nlib/no-globals": "off"
        },
        "overrides": [
            {
                "files": [
                    "test/rules.test.ts"
                ],
                "rules": {
                    "@typescript-eslint/no-unsafe-assignment": "off"
                }
            }
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "run-p test lint"
        }
    },
    "renovate": {
        "extends": [
            "github>nlibjs/renovate-config"
        ]
    }
}
